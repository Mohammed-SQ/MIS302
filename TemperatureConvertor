        public Form1()
        {
            InitializeComponent();
        }

        private void btnConvert_Click(object sender, EventArgs e)
        {
            try
            {
                double fahrenheit = 0;
                double celsius = 0;
                double kelvin = 0;
                int indexNum = 0;
                double tempNum = double.Parse(txtboxTemp.Text);
                string tempOne = listBox1.SelectedItem.ToString();
                string tempTwo = listBox2.SelectedItem.ToString();
                switch (tempOne)
                {

                    case "Fahrenheit":
                        indexNum = 0;
                        listBox2.Items.Remove("Fahrenheit");
                        switch (tempTwo)
                        {
                            case "Celsius":
                                fahrenheit = tempNum * 1.8 + 32; // C to F
                                lblConverted.Text = fahrenheit.ToString();
                                break;
                            case "Kelvin":
                                fahrenheit = (tempNum - 273.15) * 1.8 + 32; // K to F
                                lblConverted.Text = fahrenheit.ToString();
                                break;
                        }
                        break;
                    case "Celsius":
                        listBox2.Items.Remove("Celsius");
                        switch (tempTwo)
                        {
                            case "Fahrenheit":
                                celsius = (tempNum - 32) / 1.8; // F TO C
                                lblConverted.Text = celsius.ToString();
                                break;
                            case "Kelvin":
                                celsius = tempNum - 273.15; // K to C
                                lblConverted.Text = celsius.ToString();
                                break;
                        }
                        break;
                    case "Kelvin":
                        listBox2.Items.Remove("Kelvin");
                        switch (tempTwo)
                        {
                            case "Celsius":
                                kelvin = tempNum + 373.15; // C to K
                                lblConverted.Text = kelvin.ToString();
                                break;
                            case "Fahrenheit":
                                kelvin = (tempNum - 32) / 1.8 + 273.15; // F TO K
                                lblConverted.Text = kelvin.ToString();
                                break;
                        }
                        break;
                }


            }
            catch 
            { 
                MessageBox.Show("Something Wrong!");
            }
        }

