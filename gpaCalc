using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using static System.Windows.Forms.VisualStyles.VisualStyleElement;

namespace GPACalculator
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void btnCalculate_Click(object sender, EventArgs e) // 3 x 4 / 4 credit
        {
            try
            {
                double firstCourse = 0;
                double secondCourse = 0;
                double thirdCourse = 0;
                double fourthCourse = 0;
                double fifthCourse = 0;
                double gpa = 0;
                int weightOne = int.Parse(txtCredit1.Text); // 1 - Credit Hour
                int courseOne = int.Parse(txtCourse1.Text); // 1 - Course point
                if (courseOne >= 90)
                {
                    firstCourse = 4.0; // "A"
                }
                else if (courseOne >= 80)
                {
                    firstCourse = 3.0; // "B"
                }
                else if (courseOne >= 70)
                {
                    firstCourse = 2.0; // "C"
                }
                else if (courseOne >= 60)
                {
                    firstCourse = 1.0; // "D"
                }
                else if (courseOne <= 59)
                {
                    firstCourse = 0; // "F"
                }

                int weightTwo = int.Parse(txtCredit2.Text); // 2 - Credit Hour
                int courseTwo = int.Parse(txtCourse2.Text); // 2 - Course point
                if (courseTwo >= 90)
                {
                    secondCourse = 4.0; // "A"
                }
                else if (courseTwo >= 80)
                {
                    secondCourse = 3.0; // "B"
                }
                else if (courseTwo >= 70)
                {
                    secondCourse = 2.0; // "C"
                }
                else if (courseTwo >= 60)
                {
                    secondCourse = 1.0; // "D"
                }
                else if (courseTwo <= 59)
                {
                    secondCourse = 0; // "F"
                }
                int weightThree = int.Parse(txtCredit3.Text); // 3 - Credit Hour
                int courseThree = int.Parse(txtCourse3.Text); // 3 - Course point
                if (courseThree >= 90)
                {
                    thirdCourse = 4.0; // "A"
                }
                else if (courseThree >= 80)
                {
                    thirdCourse = 3.0; // "B"
                }
                else if (courseThree >= 70)
                {
                    thirdCourse = 2.0; // "C"
                }
                else if (courseThree >= 60)
                {
                    thirdCourse = 1.0; // "D"
                }
                else if (courseThree <= 59)
                {
                    thirdCourse = 0; // "F"
                }
                int weightFour = int.Parse(txtCredit4.Text); // 4 - Credit Hour
                int courseFour = int.Parse(txtCourse4.Text); // 4 - Course point
                if (courseFour >= 90)
                {
                    fourthCourse = 4.0; // "A"
                }
                else if (courseFour >= 80)
                {
                    fourthCourse = 3.0; // "B"
                }
                else if (courseFour >= 70)
                {
                    fourthCourse = 2.0; // "C"
                }
                else if (courseFour >= 60)
                {
                    fourthCourse = 1.0; // "D"
                }
                else if (courseFour <= 59)
                {
                    fourthCourse = 0; // "F"
                }
                int weightFive = int.Parse(txtCredit5.Text); // 5 - Credit Hour
                int courseFive = int.Parse(txtCourse5.Text); // 5 - Course point
                if (courseFive >= 90)
                {
                    fifthCourse = 4.0; // "A"
                }
                else if (courseFive >= 80)
                {
                    fifthCourse = 3.0; // "B"
                }
                else if (courseFive >= 70)
                {
                    fifthCourse = 2.0; // "C"
                }
                else if (courseFive >= 60)
                {
                    fifthCourse = 1.0; // "D"
                }
                else if (courseFive <= 59)
                {
                    fifthCourse = 0; // "F"
                }
                double totalWeights = weightOne + weightTwo + weightThree + weightFour + weightFive;
                gpa = (firstCourse * weightOne + secondCourse * weightTwo + thirdCourse * weightThree + fourthCourse * weightFour + fifthCourse * weightFive) / totalWeights;
                MessageBox.Show("GPA IS: " + gpa.ToString());
            }
            catch
            {
                MessageBox.Show("Please enter correct number values for all courses points and credit hours.");
            }
        }

        private void txtCourse1_TextChanged(object sender, EventArgs e)
        {

        }

        private void txtCredit1_TextChanged(object sender, EventArgs e)
        {

        }

        private void txtCourse2_TextChanged(object sender, EventArgs e)
        {

        }

        private void txtCredit2_TextChanged(object sender, EventArgs e)
        {

        }
    }
}
